{% set url = url ?? '/' %}
<!DOCTYPE html>
<html lang="en">

	<head>
		<meta charset="UTF-8"/>
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous"/>
		<link rel="stylesheet" href="{{ url ~ 'assets/css/style.css' }}"/>
		<title>
			{% block title %}
				EtyDict
			{% endblock %}
		</title>
		{% block head %}{% endblock %}
	</head>

	<body class="bg-light">
		<nav class="clearfix navbar navbar-expand-lg navbar-light bg-white border-bottom px-5">
			<a class="float-start navbar-brand fw-bold" href="/">
				<img src="{{ url }}assets/img/etydict-logo.svg" alt="EtyDict Logo" width="32" height="32"/>
			</a>
			<div class="flex-grow-1 d-flex justify-content-center fw-semibold fs-4" id="nav-menu">
				<ul class="navbar-nav gap-5">
					<li class="nav-item">
						<a class="nav-link" href="{{ url }}dictionary/">Dictionary</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="{{ url }}search/">Search</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="{{ url }}etymology/">Etymology</a>
					</li>
				</ul>
			</div>
			{% if user is defined and user %}
				{% include 'nav_logged_in.html.twig' %}
			{% else %}
				{% include 'nav_logged_out.html.twig' %}
			{% endif %}
		</nav>
		{% block body %}{% endblock %}
		<footer class="bg-white border-top py-5 text-center text-muted mt-5">
			&copy; 2025 EtyDict. All rights reserved.
		</footer>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
		<script src="{{ url }}assets/js/script.js" defer></script>
		<script>
			window.etydictBaseUrl = '{{ url }}'
		</script>
	</body>
</html>
